<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>

  <% if github_token %>
    <section class="github">
      <h1>Github</h1>

      <h3>Repos</h3>
      <% facade.repos.each do |repo| %>
      <ul>
        <li><%= link_to repo.name, repo.html_url %></li>
      </ul>
      <% end %>

      <section class="followers">
        <h3>Followers</h3>
        <% facade.followers.each do |follower| %>
        <ul>
          <li><%= link_to follower.login, follower.url %></li>
        </ul>
        <% end %>
      </section>

      <section class="following">
        <h3>Following</h3>
        <% facade.followings.each do |following| %>
        <ul>
          <li><%= link_to following.login, following.url %></li>
        </ul>
        <% end %>
      </section>
    </section>

  <% else %>
    <%= button_to 'Connect to Github', 'auth/github', method: 'get', class: "btn btn-primary mb1 bg-teal" %>
  <% end %>
